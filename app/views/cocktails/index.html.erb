<div class="container mt-4">
  <div class="row">
    <div class="col-10">
      <h1>All cocktails</h1>
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
        <% end %>
      </div>
      <hr>
      <%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary float-right" %>
    </div>
  </div>
</div>
